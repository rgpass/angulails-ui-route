source 'https://rubygems.org'
ruby '2.1.2'

# ANGULAR-RAILS STUFF
# Bower is an awesome front-end package manager
# $ rails g bower_rails:initialize json
# Creates bower.json, where dependencies will be handled
# Install depencies via: $ rake bower:install
gem 'bower-rails'
# "Angular Rails Templates is an awesome gem that makes working with angular 
# templates far easier. It uses template cache to lower amount of AJAX requests.
# Less AJAX == Less HTTP requests == Better performance
gem 'angular-rails-templates'

gem 'rails', '4.1.6'
# gem 'sqlite3'
gem 'pg'
gem 'sass-rails', '~> 4.0.3'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'

group :doc do
  gem 'sdoc', '~> 0.4.0'
end

group :development do
  gem 'spring'
end
